<?xml version="1.0" encoding="utf-8"?>
<configs>
	<append xpath="/items">
		<item name="resourceGum">			<!-- scrap material -->
			<property name="HoldType" value="45"/>
			<property name="Meshfile" value="@:Other/Items/Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab"/>
			<property name="Weight" value="5"/>
			<property name="Stacknumber" value="6000"/>
			<!-- STK resource -->
			<property name="EconomicValue" value="25"/>
			<property name="EconomicBundleSize" value="50"/>
			<property name="Group" value="Resources"/>
			<property name="DescriptionKey" value="resourceGumDesc"/>
			<property name="Material" value="MresourceWood"/>
		</item>

		<item name="foodPineapple">
			<property name="HoldType" value="31"/>
			<property name="Meshfile" value="@:Other/Items/Misc/parcelPrefab.prefab"/>
			<property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab"/>
			<property name="Material" value="Morganics"/>
			<property name="Weight" value="5"/>
			<property name="Stacknumber" value="125"/>
			<property name="EconomicValue" value="4"/>
			<property name="Group" value="Food/Cooking,CFFood/Cooking"/>
			<property name="DescriptionKey" value="foodPineappleDesc"/>
			<property name="UseAction" value="Eat"/>
			<property name="Delay" value="1.5"/>
			<property name="UseSound" value="player_eating"/>
			<property class="Action0">
				<property name="Class" value="Eat"/>
				<property name="Delay" value="1.5"/>
				<property name="Use_time" value="1.5"/>
				<!-- Blueberry stats *2 but -1 health -->
				<property name="Gain_food" value="8"/>
				<property name="Gain_water" value="6"/>
				<property name="Gain_health" value="-1"/>
			</property>
		</item>

		<item name="drinkPineappleBeer">
			<property name="Extends" value="drinkJarBeer"/>
			<property name="CustomIcon" value="drinkPineappleBeer"/>
			<property name="DescriptionKey" value="drinkPineappleBeerDesc"/>
			<property class="Action0">
				<property name="Class" value="Eat"/>
				<property name="Delay" value="1.5"/>
				<property name="Use_time" value="1.5"/>
				<!-- Beer stats but without dizziness effect -->
				<property name="Gain_food" value="1"/>
				<property name="Gain_water" value="15"/>
				<property name="Gain_health" value="2"/>
				<property name="Gain_stamina" value="20"/>
			</property>
		</item>

		<item name="pansLuckyBox">
			<property name="Extends" value="questRewardBundleMaster"/>
			<property name="CustomIcon" value="pansLuckyBox"/>
			<property name="CustomIconTint" value="B3B3B3"/>
			<property name="ItemTypeIcon" value="bundle"/>
			<property name="CreativeMode" value="Player"/>
			<property name="EconomicValue" value="5000"/>
			<property name="Stacknumber" value="6000"/>
			<property name="Group" value="Ammo/Weapons,Ammo"/>
			<property class="Action0">
				<conditional>
					<!-- 启用了现代武器模组，添加现代武器箱 -->
					<if cond="mod_loaded('WeaponMaster_ModernWarfare')">
						<property name="Random_item" value="现代武器箱,弹药补给箱,thrownGrenade,thrownAmmoMolotovCocktail,thrownDynamite"/>
						<property name="Random_item_count" value="1-5,1-5,1-5,1-5,1-5"/>
						<property name="Random_count" value="5"/>
						<property name="Unique_random_only" value="true"/>
					</if>
					<else>
						<!-- 常规：燃烧瓶、柱状炸药、手雷 -->
						<property name="Random_item" value="thrownGrenade,thrownAmmoMolotovCocktail,thrownDynamite"/>
						<property name="Random_item_count" value="1-5,1-5,1-5"/>
						<property name="Random_count" value="3"/>
						<property name="Unique_random_only" value="true"/>
					</else>
				</conditional>
			</property>
		</item>
	</append>
</configs>
